<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConsultationListController" stylesheets="@../css/appointment.css">
    <top>
        <VBox>
            <HBox spacing="0" style="-fx-background-color: #2c3e50; -fx-padding: 0;">
                <Button text="Dashboard" styleClass="nav-tab" onAction="#handleHomeTab"/>
                <Button text="Patients" styleClass="nav-tab" onAction="#handlePatientsTab"/>
                <Button text="Rendez-vous" styleClass="nav-tab" onAction="#handleRendezVousTab"/>
                <Button text="Consultations" styleClass="nav-tab-active"/>
                <Button text="Traitements" styleClass="nav-tab" onAction="#handleTraitementsTab"/>
                <Button text="Logout" styleClass="nav-tab" onAction="#handleLogout"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15 20;">
                <Label text="Historique des Consultations" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="consultationTable" VBox.vgrow="ALWAYS" styleClass="appointment-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="40" />
                    <TableColumn fx:id="colPatient" text="Patient" prefWidth="150" />
                    <TableColumn fx:id="colDate" text="Date Création" prefWidth="150" />
                    <TableColumn fx:id="colDiagnosis" text="Diagnostic" prefWidth="200" />
                    <TableColumn fx:id="colPrescription" text="Ordonnance" prefWidth="200" />
                    <TableColumn fx:id="colNotes" text="Notes" prefWidth="150" />
                </columns>
                <placeholder>
                    <Label text="Aucune consultation trouvée" />
                </placeholder>
            </TableView>
        </VBox>
    </center>
</BorderPane>
