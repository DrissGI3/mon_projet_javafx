<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AppointmentController" stylesheets="@../css/appointment.css">
    <top>
        <VBox>
            <HBox spacing="0" style="-fx-background-color: #17a2b8; -fx-padding: 0;">
                <Button text="Home" styleClass="nav-tab" onAction="#handleHomeTab"/>
                <Button text="Patients" styleClass="nav-tab" onAction="#handlePatientsTab"/>
                <Button text="Rendez-vous" styleClass="nav-tab-active"/>
                <Button text="Consultations" styleClass="nav-tab" onAction="#handleConsultationsTab"/>
                <Button text="Traitements" styleClass="nav-tab" onAction="#handleTraitementsTab"/>
                <Button text="Aide" styleClass="nav-tab" onAction="#handleAideTab"/>
                <Button text="User" styleClass="nav-tab" onAction="#handleUserTab"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15 20;">
                <Label text="Gestion des Rendez-vous" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button text="Démarrer Consultation" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#handleStartConsultation"/>
                <Button text="Nouveau Rendez-vous" styleClass="btn-add" onAction="#handleNewAppointment"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS" styleClass="appointment-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="40" />
                    <TableColumn fx:id="colPatient" text="Patient" prefWidth="150" />
                    <TableColumn fx:id="colDoctor" text="Médecin (ID)" prefWidth="100" />
                    <TableColumn fx:id="colDate" text="Date" prefWidth="100" />
                    <TableColumn fx:id="colTime" text="Heure" prefWidth="80" />
                    <TableColumn fx:id="colStatus" text="Statut" prefWidth="100" />
                    <TableColumn fx:id="colReason" text="Motif" prefWidth="200" />
                    <TableColumn fx:id="colCreatedAt" text="Créé le" prefWidth="150" />
                </columns>
                <placeholder>
                    <Label text="Aucun rendez-vous trouvé" />
                </placeholder>
            </TableView>
        </VBox>
    </center>
</BorderPane>
