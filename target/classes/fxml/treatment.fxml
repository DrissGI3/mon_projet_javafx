<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TraitementController" stylesheets="@../css/appointment.css">
    <top>
        <VBox>
            <HBox spacing="0" style="-fx-background-color: #28a745; -fx-padding: 0;">
                <Button text="Home" styleClass="nav-tab" onAction="#handleHomeTab"/>
                <Button text="Patients" styleClass="nav-tab" onAction="#handlePatientsTab"/>
                <Button text="Rendez-vous" styleClass="nav-tab" onAction="#handleRendezVousTab"/>
                <Button text="Traitements" styleClass="nav-tab-active"/>
                <Button text="Aide" styleClass="nav-tab" />
                <Button text="User" styleClass="nav-tab" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15 20;">
                <Label text="Gestion des Traitements" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnAddTreatment" text="Nouveau Traitement" styleClass="btn-add" onAction="#handleNewTreatment"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="treatmentTable" VBox.vgrow="ALWAYS" styleClass="appointment-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="40" />
                    <TableColumn fx:id="colPatient" text="Patient" prefWidth="150" />
                    <TableColumn fx:id="colDoctor" text="Médecin" prefWidth="100" />
                    <TableColumn fx:id="colStart" text="Début" prefWidth="100" />
                    <TableColumn fx:id="colEnd" text="Fin" prefWidth="100" />
                    <TableColumn fx:id="colStatus" text="Statut" prefWidth="100" />
                    <TableColumn fx:id="colDesc" text="Description" prefWidth="250" />
                </columns>
                <placeholder>
                    <Label text="Aucun traitement trouvé" />
                </placeholder>
            </TableView>
        </VBox>
    </center>
</BorderPane>
