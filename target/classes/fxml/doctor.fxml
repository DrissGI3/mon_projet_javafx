<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DoctorController" stylesheets="@../css/appointment.css">
    <top>
        <VBox>
            <HBox spacing="0" style="-fx-background-color: #2c3e50; -fx-padding: 0;">
                <Button text="Dashboard" styleClass="nav-tab-active"/>
                <Button text="Patients" styleClass="nav-tab" onAction="#handlePatientsTab"/>
                <Button text="Rendez-vous" styleClass="nav-tab" onAction="#handleRendezVousTab"/>
                <Button text="Consultations" styleClass="nav-tab" onAction="#handleConsultationsTab"/>
                <Button text="Traitements" styleClass="nav-tab" onAction="#handleTraitementsTab"/>
                <Button text="Aide" styleClass="nav-tab" />
                <Button text="Logout" styleClass="nav-tab" onAction="#handleLogout"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 20 30;">
                <VBox spacing="5">
                    <Label text="Tableau de Bord - Docteur" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="welcomeLabel" text="Bienvenue, Dr. [Nom]" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <Label text="Sélectionnez une section dans la barre de navigation" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Gérer les Patients" onAction="#handlePatientsTab" style="-fx-padding: 20 40; -fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10;"/>
                <Button text="Gérer les Traitements" onAction="#handleTraitementsTab" style="-fx-padding: 20 40; -fx-font-size: 16px; -fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 10;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
